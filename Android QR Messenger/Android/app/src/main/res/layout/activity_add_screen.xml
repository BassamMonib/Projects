<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScreen"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/addWait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/LoginUpTextView"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend!"
        android:textColor="#18206F"
        android:layout_marginTop="162dp"
        android:layout_marginLeft="65dp"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter friend's email to add"
        android:textColor="#18206F"
        android:paddingTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="65dp"
        />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:paddingBottom="0dp"
        android:src="@drawable/ic_undraw_add_friends_re_3xte"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/_toAdd"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg_color"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/add_btn"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_primary"
        android:text="Add"
        android:textColor="#ffff"
        app:strokeColor="#11164E"
        android:layout_marginBottom="112dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_wave__2_"
        android:scaleType="fitEnd"
        />

</LinearLayout>